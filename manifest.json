{
  "short_name": "Review summarizer",
  "name": "Summarize produce reviews",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "action":{
    "default_popup": "build/index.html",
    "default_icon": {
      "48": "/images/logo48.png",
      "128": "/images/logo128.png"
    }
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*" 
  ],
  "icons": {
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  }
}